    <script>
        // دالة لمعالجة أخطاء الصور
        function handleImageError(img, mealType) {
            // إنشاء صورة بديلة باستخدام SVG
            const color = '#43cea2';
            const text = mealType;

            img.src = `data:image/svg+xml;charset=utf-8,%3Csvg xmlns%3D%22http%3A%2F%2Fwww.w3.org%2F2000%2Fsvg%22 width%3D%2280%22 height%3D%2280%22 viewBox%3D%220 0 80 80%22%3E%3Ccircle cx%3D%2240%22 cy%3D%2240%22 r%3D%2238%22 fill%3D%22${encodeURIComponent(color)}%22%2F%3E%3Ctext x%3D%2240%22 y%3D%2245%22 text-anchor%3D%22middle%22 font-family%3D%22Arial%22 font-size%3D%2212%22 fill%3D%22white%22%3E${encodeURIComponent(text)}%3C%2Ftext%3E%3C%2Fsvg%3E`;
            img.onerror = null; // منع التكرار
        }

        // بيانات السعرات لكل يوم: [Carbs, Protein, Fat, Fiber]
        const macroData = {
            day6: [50,20,20,10],
            day0: [45,25,20,10],
            day1: [48,22,20,10],
            day2: [46,24,20,10],
            day3: [47,23,20,10],
            day4: [44,26,20,10],
            day5: [45,25,20,10]
        };

        // Tab functionality + إنشاء Pie Chart عند الظهور
        const tabs = document.querySelectorAll('.tab-btn');
        const contents = document.querySelectorAll('.tab-content');
        let charts = {}; // لتخزين كل التشارتات

        function createChart(id, data){
            const ctx = document.getElementById(id).getContext('2d');
            charts[id] = new Chart(ctx,{
                type:'pie',
                data:{
                    labels:['Carbs','Protein','Fat','Fiber'],
                    datasets:[{
                        label:'Nutrition',
                        data:data,
                        backgroundColor:['#0ca8b7','#073763','#43cea2','#f5b700'],
                        borderWidth:1
                    }]
                },
                options:{
                    responsive:true,
                    plugins:{
                        legend:{
                            position:'bottom'
                        }
                    }
                }
            });
        }

        // إنشاء تشارت اليوم الأول عند التحميل
        createChart('chart-day6', macroData['day6']);

        tabs.forEach(tab => {
            tab.addEventListener('click', ()=>{
                tabs.forEach(b=>b.classList.remove('active'));
                tab.classList.add('active');
                const id = tab.getAttribute('aria-controls');
                contents.forEach(c=>c.classList.remove('active'));
                document.getElementById(id).classList.add('active');

                // إنشاء التشارت إذا لم يتم إنشاؤه مسبقاً
                if(!charts['chart-'+id]){
                    createChart('chart-'+id, macroData[id]);
                }
            });
        });
    </script>
