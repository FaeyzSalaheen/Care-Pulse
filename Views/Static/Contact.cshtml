@{
    ViewData["Title"] = "Contact Us";
    Layout = "_Layout";
}

<div class="contact-page">
    <div class="contact-hero text-center py-5 text-white">
        <div class="container py-4">
            <h1 class="display-4 mb-3"><i class="fas fa-envelope me-2"></i>Contact Us</h1>
            <p class="lead mb-0">We're here to answer all your questions</p>
        </div>
    </div>

    <div class="container py-5">
        <div class="row">
            <div class="col-lg-6 mb-4 mb-lg-0">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <h3 class="mb-4">Send Us a Message</h3>
                        <form>
                            <div class="mb-3">
                                <label for="name" class="form-label">Full Name</label>
                                <input type="text" class="form-control" id="name" required>
                            </div>
                            <div class="mb-3">
                                <label for="email" class="form-label">Email Address</label>
                                <input type="email" class="form-control" id="email" required>
                            </div>
                            <div class="mb-3">
                                <label for="subject" class="form-label">Subject</label>
                                <input type="text" class="form-control" id="subject" required>
                            </div>
                            <div class="mb-3">
                                <label for="message" class="form-label">Message</label>
                                <textarea class="form-control" id="message" rows="5" required></textarea>
                            </div>
                            <button type="submit" class="btn btn-primary px-4">Send Message</button>
                        </form>
                    </div>
                </div>
            </div>

            <div class="col-lg-6">
                <div class="card border-0 shadow-sm h-100">
                    <div class="card-body p-4">
                        <h3 class="mb-4">Contact Information</h3>
                        <div class="contact-info mb-4">
                            <div class="d-flex align-items-start mb-3">
                                <i class="fas fa-map-marker-alt text-primary me-3 mt-1"></i>
                                <div>
                                    <h5 class="mb-1">Address</h5>
                                    <p class="mb-0">Riyadh, Saudi Arabia</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-start mb-3">
                                <i class="fas fa-phone-alt text-primary me-3 mt-1"></i>
                                <div>
                                    <h5 class="mb-1">Phone</h5>
                                    <p class="mb-0">+966 12 345 6789</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-start mb-3">
                                <i class="fas fa-envelope text-primary me-3 mt-1"></i>
                                <div>
                                    <h5 class="mb-1">Email</h5>
                                    <p class="mb-0">info@carepulse.com</p>
                                </div>
                            </div>
                            <div class="d-flex align-items-start">
                                <i class="fas fa-clock text-primary me-3 mt-1"></i>
                                <div>
                                    <h5 class="mb-1">Working Hours</h5>
                                    <p class="mb-0">Sunday - Thursday: 8 AM - 5 PM</p>
                                </div>
                            </div>
                        </div>

                        <div class="social-media mt-4">
                            <h5 class="mb-3">Follow Us</h5>
                            <div class="d-flex gap-3">
                                <a href="#" class="social-icon"><i class="fab fa-twitter fa-2x"></i></a>
                                <a href="#" class="social-icon"><i class="fab fa-facebook-f fa-2x"></i></a>
                                <a href="#" class="social-icon"><i class="fab fa-instagram fa-2x"></i></a>
                                <a href="#" class="social-icon"><i class="fab fa-linkedin-in fa-2x"></i></a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .contact-page {
        min-height: calc(100vh - 150px);
    }

    .contact-hero {
        background: linear-gradient(135deg, rgba(0, 184, 148, 0.9), rgba(9, 132, 227, 0.9));
        margin-bottom: 3rem;
        border-radius: 0 0 20px 20px;
    }

    .contact-info h5 {
        color: var(--primary);
        font-size: 1.1rem;
    }

    .social-icon {
        color: var(--dark);
        transition: color 0.3s;
    }

        .social-icon:hover {
            color: var(--primary);
        }

    .form-control, .form-select {
        border-radius: 8px;
        padding: 0.5rem 1rem;
    }
</style>