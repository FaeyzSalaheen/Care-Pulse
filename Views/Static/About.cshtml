@{
}
@{
    ViewData["Title"] = "About Us";
    Layout = "_Layout";
}

<div class="about-page">
    <div class="about-hero text-center py-5 text-white">
        <div class="container py-4">
            <h1 class="display-4 mb-3"><i class="fas fa-info-circle me-2"></i>About Us</h1>
            <p class="lead mb-0">Our Mission, Vision, and Values</p>
        </div>
    </div>

    <div class="container py-5">
        <div class="row align-items-center mb-5">
            <div class="col-lg-6">
                <h2 class="mb-4">Our Mission</h2>
                <p class="lead">Providing comprehensive healthcare and reliable medical information for everyone.</p>
                <p>We believe that access to correct health information should be a right for all. We strive to provide accurate and easy-to-understand medical content, with a focus on quality and credibility.</p>
            </div>
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1579684385127-1ef15d508118?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" class="img-fluid rounded shadow" alt="Our Mission">
            </div>
        </div>

        <div class="row align-items-center mb-5 flex-lg-row-reverse">
            <div class="col-lg-6">
                <h2 class="mb-4">Our Vision</h2>
                <p class="lead">To be the leading platform in digital healthcare in the region.</p>
                <p>We aspire to create a conscious, healthy community where individuals can easily access reliable medical information, specialized consultations, and innovative healthcare services.</p>
            </div>
            <div class="col-lg-6">
                <img src="https://images.unsplash.com/photo-1576091160399-112ba8d25d1d?ixlib=rb-1.2.1&auto=format&fit=crop&w=500&q=80" class="img-fluid rounded shadow" alt="Our Vision">
            </div>
        </div>

        <div class="team-section text-center py-4">
            <h2 class="mb-5">Our Team</h2>
            <div class="row">
                <div class="col-md-4 mb-4">
                    <div class="team-card p-4 rounded shadow-sm">
                        <img src="https://randomuser.me/api/portraits/women/65.jpg" class="rounded-circle mb-3" width="120" alt="Dr. Sara">
                        <h4>Dr. Sara Abdullah</h4>
                        <p class="text-muted">Cardiovascular Specialist</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="team-card p-4 rounded shadow-sm">
                        <img src="https://randomuser.me/api/portraits/men/32.jpg" class="rounded-circle mb-3" width="120" alt="Dr. Ahmed">
                        <h4>Dr. Ahmed Mohammed</h4>
                        <p class="text-muted">Therapeutic Nutrition Specialist</p>
                    </div>
                </div>
                <div class="col-md-4 mb-4">
                    <div class="team-card p-4 rounded shadow-sm">
                        <img src="https://randomuser.me/api/portraits/women/44.jpg" class="rounded-circle mb-3" width="120" alt="Dr. Nora">
                        <h4>Dr. Nora Saeed</h4>
                        <p class="text-muted">Mental Health Specialist</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .about-page {
        min-height: calc(100vh - 150px);
    }

    .about-hero {
        background: linear-gradient(135deg, rgba(0, 184, 148, 0.9), rgba(9, 132, 227, 0.9));
        margin-bottom: 3rem;
        border-radius: 0 0 20px 20px;
    }

    .team-card {
        transition: transform 0.3s;
        background: white;
    }

        .team-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0, 0, 0, 0.1) !important;
        }

        .team-card img {
            border: 3px solid var(--primary);
        }
</style>