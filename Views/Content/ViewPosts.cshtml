@model List<PostViewModel>
@{
    ViewData["Title"] = "Posts";
    Layout = "_Layout";
}

<style>
    body {
        direction: ltr;
        text-align: left;
        font-family: 'Tajawal', sans-serif;
    }

    .posts-page {
        background-color: #f8fafc;
        padding: 60px 0;
        min-height: 100vh;
    }

    .page-header {
        text-align: center;
        margin-bottom: 50px;
    }

    .page-title {
        font-size: 2.5rem;
        color: #2d3748;
        font-weight: 700;
        margin-bottom: 15px;
        position: relative;
        display: inline-block;
    }

        .page-title:after {
            content: '';
            position: absolute;
            bottom: -10px;
            left: 50%;
            transform: translateX(-50%);
            width: 100px;
            height: 4px;
            background: #4a6fa5;
            border-radius: 3px;
        }

    .page-subtitle {
        color: #718096;
        font-size: 1.1rem;
        max-width: 700px;
        margin: 0 auto;
        line-height: 1.6;
    }

    .posts-container {
        display: flex;
        flex-direction: column;
        gap: 40px;
        padding: 0 20px;
        max-width: 900px;
        margin: 0 auto;
    }

    .post-card {
        background: #fff;
        border-radius: 12px;
        overflow: hidden;
        box-shadow: 0 4px 15px rgba(0, 0, 0, 0.05);
        transition: all 0.3s ease;
        width: 100%;
        border: 1px solid #e2e8f0;
    }

        .post-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 25px rgba(0, 0, 0, 0.1);
        }

    .post-image-container {
        height: 350px;
        overflow: hidden;
        position: relative;
    }

    .post-image {
        width: 100%;
        height: 100%;
        object-fit: cover;
        transition: transform 0.5s ease;
    }

    .post-card:hover .post-image {
        transform: scale(1.03);
    }

    .no-image {
        background: linear-gradient(135deg, #f7fafc 0%, #edf2f7 100%);
        display: flex;
        align-items: center;
        justify-content: center;
        height: 250px;
    }

        .no-image i {
            font-size: 3rem;
            color: #a0aec0;
            opacity: 0.5;
        }

    .post-content {
        padding: 30px;
    }

    .post-title {
        font-size: 1.6rem;
        font-weight: 700;
        color: #2d3748;
        margin-bottom: 15px;
        line-height: 1.4;
    }

    .post-description {
        color: #4a5568;
        font-size: 1.15rem;
        line-height: 1.8;
        margin-bottom: 20px;
        white-space: pre-line;
    }

    .post-footer {
        display: flex;
        justify-content: space-between;
        align-items: center;
        padding: 20px 30px;
        border-top: 1px solid #edf2f7;
        background-color: #f8fafc;
    }

    .post-author {
        color: #4a6fa5;
        font-weight: 600;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .post-date {
        color: #718096;
        display: flex;
        align-items: center;
        gap: 8px;
    }

    .empty-state {
        text-align: center;
        max-width: 600px;
        margin: 0 auto;
        padding: 60px 20px;
    }

    .empty-icon {
        font-size: 4rem;
        color: #cbd5e0;
        margin-bottom: 25px;
    }

    .empty-title {
        font-size: 1.8rem;
        color: #4a5568;
        margin-bottom: 15px;
        font-weight: 600;
    }

    .empty-message {
        color: #718096;
        font-size: 1.1rem;
        line-height: 1.7;
    }

    .social-share {
        display: flex;
        gap: 15px;
        margin-top: 25px;
        justify-content: center;
    }

        .social-share a {
            color: #718096;
            font-size: 1.2rem;
            transition: color 0.3s ease;
        }

            .social-share a:hover {
                color: #4a6fa5;
            }

    @@media (max-width: 768px) {
        .posts-container {
            padding: 0 15px;
            gap: 30px;
        }

        .page-title {
            font-size: 2rem;
        }

        .post-image-container {
            height: 250px;
        }

        .post-content {
            padding: 20px;
        }

        .post-title {
            font-size: 1.4rem;
        }

        .post-description {
            font-size: 1rem;
        }

        .post-footer {
            flex-direction: column;
            gap: 10px;
            align-items: flex-start;
            padding: 15px 20px;
        }
    }
</style>

<div class="posts-page">
    <div class="container">
        <div class="page-header">
            <h1 class="page-title">Latest Posts</h1>
            <p class="page-subtitle">Browse our latest posts and articles we share with you</p>
        </div>

        @if (!Model.Any())
        {
            <div class="empty-state">
                <div class="empty-icon">
                    <i class="far fa-newspaper"></i>
                </div>
                <h3 class="empty-title">No posts available at the moment</h3>
                <p class="empty-message">We're working on preparing new and useful content for you. Please visit us later to see the latest posts.</p>
            </div>
        }
        else
        {
            <div class="posts-container">
                @foreach (var post in Model)
                {
                    <div class="post-card">
                        @if (!string.IsNullOrEmpty(post.FileUrl))
                        {
                            <div class="post-image-container">
                                <img src="@post.FileUrl" class="post-image" alt="@post.Title" loading="lazy">
                            </div>
                        }
                        else
                        {
                            <div class="no-image">
                                <i class="far fa-file-alt"></i>
                            </div>
                        }

                        <div class="post-content">
                            <h3 class="post-title">@post.Title</h3>
                            <p class="post-description">@post.Description</p>

                            <div class="social-share">
                                <a href="#" title="Share on Facebook"><i class="fab fa-facebook"></i></a>
                                <a href="#" title="Share on Twitter"><i class="fab fa-twitter"></i></a>
                                <a href="#" title="Share on LinkedIn"><i class="fab fa-linkedin"></i></a>
                                <a href="#" title="Share via WhatsApp"><i class="fab fa-whatsapp"></i></a>
                            </div>
                        </div>

                        <div class="post-footer">
                            <span class="post-author">
                                <i class="fas fa-user"></i> Posted by: @post.Author
                            </span>
                            <span class="post-date">
                                <i class="far fa-calendar-alt"></i> @post.CreatedAt.ToLocalTime().ToString("yyyy/MM/dd")
                            </span>
                        </div>
                    </div>
                }
            </div>
        }
    </div>
</div>

@section Scripts {
    <script>
        // Add any required scripts here
        document.addEventListener('DOMContentLoaded', function() {
            // Add image appearance effects
            const images = document.querySelectorAll('.post-image');

            const lazyLoad = (target) => {
                const io = new IntersectionObserver((entries, observer) => {
                    entries.forEach(entry => {
                        if (entry.isIntersecting) {
                            const img = entry.target;
                            img.style.opacity = '1';
                            observer.disconnect();
                        }
                    });
                });

                io.observe(target);
            };

            images.forEach(lazyLoad);
        });
    </script>
}